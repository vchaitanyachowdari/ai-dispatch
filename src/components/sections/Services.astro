---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";

import c1 from "../../assets/pics/card-pic1.png";
import c2 from "../../assets/pics/card-pic2.png";
import c3 from "../../assets/pics/card-pic3.png";
import c4 from "../../assets/pics/card-pic4.png";
import c5 from "../../assets/pics/card-pic5.png";
import c6 from "../../assets/pics/card-pic6.png";
import c7 from "../../assets/pics/card-pic7.svg";

const cards = [
  {
    index: 1,
    titleTop: "Search Engine",
    titleBottom: "Optimization",
    img: c1,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 2,
    titleTop: "Automations",
    titleBottom: "",
    img: c2,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 3,
    titleTop: "Go To Market",
    titleBottom: "Strategy",
    img: c3,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 1,
    titleTop: "Email",
    titleBottom: "Marketing",
    img: c4,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 2,
    titleTop: "Brand & Content",
    titleBottom: "Studio",
    img: c5,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 3,
    titleTop: "Web ",
    titleBottom: "Development",
    img: c6,
    alt: "SEO",
    link: "https://google.com",
  },
  {
    index: 1,
    titleTop: "AI",
    titleBottom: "Agents",
    img: c7,
    alt: "SEO",
    link: "https://google.com",
  },
];

const description =
  "At our digital marketing agency, AI automation and AI agent development, we offer a comprehensive suite of services designed to help businesses grow and thrive in the digital landscape. These services include";
---

<Section id="services">
  <div class="mt-[140px] mb-5">
    <SectionTitle sectionTitle="Services" description={description} />
    <div class="grid lg:grid-cols-2 lg:grid-rows-3 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.alt}
            link={card.link}
          />
        ))
      }
    </div>
  </div>
</Section>
