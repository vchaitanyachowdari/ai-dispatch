---
import SectionTitle from "../ui/SectionTitle.astro";
import TeamCard from "../ui/TeamCard.astro";
import Section from "./Section.astro";

const description =
  "Meet the skilled and experienced team driving the success of our strategies and the development of innovative applications.";

// Team images
import p1 from "../../assets/team/founder.png";

const team = [
  {
    pic: p1,
    name: "V Chaitanya Chowdari",
    role: "Founder and CEO",
    description:
      "1+ years of experience in digital marketing. Expertise in SEO, AI Agents, Automation, and content strategy",
    link: "https://www.linkedin.com/in/v-chaitanya-chowdari-bb3733202",
  },
  
];
---

<Section id="about">
  <div class="mt-[140px]">
    <SectionTitle sectionTitle="Team" description={description} />
    <div
      class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 grid-rows-2 gap-10"
    >
      {
        team.map((member, index) => (
          <TeamCard
            key={index}
            pic={member.pic}
            name={member.name}
            role={member.role}
            description={member.description}
            link={member.link}
          />
        ))
      }
    </div>
    <div class="flex justify-end mt-10">
      <button class="btn-primary">See all team</button>
    </div>
  </div>
</Section>
